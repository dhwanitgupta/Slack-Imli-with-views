<% provide(:title, 'Add user to channel') %>
<% provide(:button_text, 'Add User') %>
<h1>Add User To <%=@channel.title%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(:user, url: add_user_to_channel_create_path) do |f| %>

  <%= hidden_field_tag :channel_id, @channel.id %>

  <%= f.label :email %>
  <%= f.text_field :email, class: 'form-control' %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
  </div>
</div>